---
import { Image } from "astro:assets";
import me from "../../../assets/media/me.webp";
import { metadata } from "../../../lib/constants";
import Tag from "../../../shared/ui/tags/Tag.astro";
import BlogLink from "../../BlogLink.astro";
import MainSocials from "../../Social/MainSocials.astro";
import Avatar from "../avatar/avatar.astro";

const thisYear = new Date().getFullYear();
const yearSince2018 = thisYear - 2018;
---

<header class="flex flex-col gap-8 md:gap-18 md:pb-20">
  <div
    class="mb-8 flex flex-col items-center justify-between gap-8 md:flex-row"
  >
    <div class="bg-primary w-full flex justify-center md:hidden rounded-xl">
      <Image
        src={me}
        class="flex justify-center bg-primary object-cover object-bottom"
        alt="Pol Gubau Amores' profile image"
        title="Pol Gubau Amores' profile image"
        width={150}
        height={150}
      />
    </div>
    <div class="flex flex-col gap-3 max-md:items-center">
      <div class="overflow-hidden">
        <h1
          class="w-fit animate-slide-in-bottom overflow-hidden text-3xl leading-[.85] sm:text-4xl md:text-6xl"
        >
          <span class="block">{metadata.longName}</span>
        </h1>
      </div>
      <div class="overflow-hidden max-md:pb-4">
        <h2
          class="w-fit animate-slide-in-bottom overflow-hidden opacity-75 md:pb-2"
        >
          <span class="block text-md leading-[.85] sm:text-xl md:text-2xl">
            {metadata.slogan}
          </span>
        </h2>
      </div>

      <MainSocials />
    </div>
    <Avatar />
  </div>

  <article class="flex flex-col gap-24 md:gap-30 pb-10 md:pt-20">
    <p class="max-w-4xl md:text-3xl leading-relaxed text-foreground/80 motion-preset-blur-up motion-delay-[500ms]">
        <Tag label={`Hi,`} position="top" className=" motion-delay-[1500ms]">👋🏼</Tag>
        I&apos;m a full time tech enthusiast graduated in <br/> 
        <Tag label="Interactive Communication" position="bottom" className="motion-delay-[1700ms]">🎓</Tag>
        and based in
        <Tag label="Barcelona" position="bottom" className="motion-delay-[1900ms]">☀️</Tag>     
      </p>
 
      <p class="max-w-4xl md:text-3xl leading-relaxed text-foreground/80 motion-preset-blur-up motion-delay-[1000ms]">
        With <Tag label={`+${yearSince2018} years of experience`} position="top" className=" motion-delay-[2100ms]">💼</Tag>
        , I have a strong background in
        web development and have worked from small websites to
        <Tag label="large-scale web applications" position="bottom" className="motion-delay-[2300ms]">🚀</Tag> 
      </p>
     
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 project-cascade">
      <BlogLink slug="projects" name="Recent projects" class="motion-translate-y-in-100 motion-opacity-in-0 motion-blur-in motion-delay-[2500ms]" />
      <BlogLink slug="ui" name="Some cool UI concepts" class="motion-translate-y-in-100 motion-opacity-in-0 motion-blur-in motion-delay-[2900ms]"/>
    </div>
  </article>
</header>
