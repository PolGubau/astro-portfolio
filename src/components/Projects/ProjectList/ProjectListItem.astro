---
import type { ProjectMetadata } from "../../../lib/constants";
import ProjectPreview from "../ProjectPreview.astro";

type Props = {
  p: ProjectMetadata;
};
const { p } = Astro.props;
const image = { src: `/media/${p.slug}/${p.cover}`, alt: p.cover };
---

return (
<li class="postGrid">
  <ProjectPreview
    backgroundColor={p.color}
    title={p.title}
    slug={p.slug}
    image={image}
  />
</li>
); };
