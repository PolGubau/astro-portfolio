---
import type { BlogMetadata } from "../../lib/utils";
import { blogs, getReadingTime } from "../../lib/utils";

type Props = {
  blog: BlogMetadata;
};

const similarTechProjects = (blog: BlogMetadata): BlogMetadata[] => {
  const tags = blog.data.tags ?? [];
  const otherBlogs = blogs.filter((post) => post.id !== blog.id);

  // Find blogs with matching tags
  const similarTechFiles = otherBlogs.filter((post) =>
    post.data.tags?.some((t) => tags.includes(t)),
  );

  // Sort by number of matching tags
  const sorted = similarTechFiles.sort((a, b) => {
    const aMatches = a.data.tags?.filter((t) => tags.includes(t)).length ?? 0;
    const bMatches = b.data.tags?.filter((t) => tags.includes(t)).length ?? 0;
    return bMatches - aMatches;
  });

  if (sorted.length >= 3) {
    return sorted.slice(0, 3);
  }

  // Fill with recent posts if not enough similar ones
  const remaining = 3 - sorted.length;
  const recentPosts = otherBlogs
    .filter((post) => !sorted.includes(post))
    .slice(0, remaining);

  return [...sorted, ...recentPosts];
};

const { blog } = Astro.props;
const similarPosts = similarTechProjects(blog);
---

{
  similarPosts.length > 0 && (
    <section class="mt-16">
      <h2 class="font-semibold text-2xl text-neutral-900 dark:text-neutral-100 mb-6">
        Related Articles
      </h2>
      <div class="gap-4 grid md:grid-cols-2 lg:grid-cols-3">
        {similarPosts.map((post) => {
          const readingTime = getReadingTime(post.body ?? "");
          const commonTags =
            post.data.tags?.filter((t) => blog.data.tags?.includes(t)) || [];

          return (
            <a
              href={`/blog/${post.id}`}
              class="group flex flex-col gap-3 rounded-xl bg-secondary-900/10 p-4 transition-all hover:bg-secondary-900/20 hover:scale-[1.02] dark:bg-secondary-100/10 dark:hover:bg-secondary-50/20"
            >
              <h3 class="font-semibold text-md group-hover:text-primary-700 dark:group-hover:text-primary-500 transition-colors line-clamp-2">
                {post.data.title}
              </h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-400 line-clamp-2">
                {post.data.summary}
              </p>

              {commonTags.length > 0 && (
                <div class="flex flex-wrap gap-1.5 mt-auto">
                  {commonTags.slice(0, 2).map((tag) => (
                    <span class="px-2 py-0.5 rounded-full bg-primary/20 text-neutral-700 dark:text-neutral-300 text-xs font-medium">
                      {tag}
                    </span>
                  ))}
                </div>
              )}

              {readingTime && (
                <div class="flex items-center gap-1 text-xs text-neutral-500">
                  <svg
                    class="w-3 h-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  {readingTime} min read
                </div>
              )}
            </a>
          );
        })}
      </div>
    </section>
  )
}
