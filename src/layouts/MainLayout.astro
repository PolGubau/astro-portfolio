---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Layout/footer/footer.astro";
import MobileNavbar from "../components/Layout/header/mobile-navbar.astro";
import Navbar from "../components/Layout/header/navbar.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article" | "profile";
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
}

const {
  title,
  description,
  image,
  type,
  publishedTime,
  modifiedTime,
  author,
  tags,
} = Astro.props;
---

<html lang="en" dir="ltr" class={"w-full overflow-x-hidden"}>
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      type={type}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
      tags={tags}
    />
  </head>
  <body>
    <main class="flex min-h-screen w-full">
      <div id="progress"></div>

      <div
        class="mt-8 mb-20 flex w-full max-w-5xl flex-auto flex-col px-4 md:mx-auto md:px-10"
        transition:animate="slide"
      >
        <div class="max-md:hidden">
          <Navbar />
        </div>
        <slot />
        <Footer />
        <MobileNavbar />
      </div>
    </main>
  </body>
</html>

<style is:global>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
  }

  @keyframes fade-out {
    to {
      opacity: 0;
    }
  }

  @keyframes slide-from-right {
    from {
      transform: translateX(30px);
    }
  }

  @keyframes slide-to-left {
    to {
      transform: translateX(-30px);
    }
  }

  ::view-transition-old(slide) {
    animation:
      180ms cubic-bezier(0.4, 0, 1, 1) both fade-out,
      300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-to-left;
  }

  ::view-transition-new(slide) {
    animation:
      420ms cubic-bezier(0, 0, 0.2, 1) 90ms both fade-in,
      300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-from-right;
  }
</style>
